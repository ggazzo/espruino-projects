{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@tspruino/machine": ["packages/machine/src"],
			"@tspruino/machine/*": ["packages/machine/src/*"],
			"@tspruino/espruino": ["packages/espruino/src"],
			"@tspruino/espruino/*": ["packages/espruino/src/*"],
			"@tspruino/visualization": ["packages/visualization/src"],
			"@tspruino/visualization/*": ["packages/visualization/src/*"]
		}
	},
	"exclude": ["node_modules"]
}
