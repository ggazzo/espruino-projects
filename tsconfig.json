{
	"compilerOptions": {
		"target": "ES5",
		"lib": ["es2017", "dom"],
		"moduleResolution": "node",
		"outDir": "dist",
		"paths": {
			"@/*": ["./src/modules/*"]
		},

		"esModuleInterop": true,

		"allowJs": true,
		"removeComments": true,
		"noEmit": true, // Optional - see note below

		"rewriteRelativeImportExtensions": true,
		"erasableSyntaxOnly": true,
		// "verbatimModuleSyntax": true,
		"types": ["@types/espruino", "node"]
	},

	"files": ["src/main.ts"],
	"include": ["src/**/*.ts"]
}
